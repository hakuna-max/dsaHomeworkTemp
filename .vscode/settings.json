{
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.fontFamily": "'IBM Plex Mono', 'LXGW WenKai Mono', Consolas, 'Courier New', monospace",
    "editor.lineHeight": 1.8,
    "vim.disableExtension": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.wordWrap": "on",
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.blame.line.enabled": false,
    "gitlens.statusBar.enabled": false,
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk (xelatex with shell-escape)",
            "tools": [
                "latexmk_xelatex_shell_escape"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk_xelatex_shell_escape",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-xelatex",
                "-shell-escape",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipe.default": "latexmk (xelatex with shell-escape)",
    "latex-workshop.latex.clean.method": "glob",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        // "*.log",
        "*.fdb_latexmk",
        "*.snm",
        "*.synctex(busy)",
        "*.synctex.gz(busy)",
        "*.nav",
        "*.xdv",
        "*.vrb",
        "_minted-*/**",
        "_minted-*/",
        "0",
        "ch/*.aux"
    ],
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.message.error.show": false,
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.log.show": true
}